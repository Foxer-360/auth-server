{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "build",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "dom",
      "es2015.collection",
      "es2015.core",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "es5",
      "es6",
      "esnext",
      "esnext.asynciterable"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "declaration": false,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "paths": {
      "@source/*": ["./*"]
    },
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "build/**/*",
    "node_modules/**/*",
    "config",
    "scripts"
  ]
}
